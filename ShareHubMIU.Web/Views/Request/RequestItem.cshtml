@model Request

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Request Item</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="BuyerId" hidden />
            <input asp-for="ItemId" hidden />
            <input asp-for="Status" hidden />
            <input asp-for="Item" hidden />
            <input asp-for="Buyer" hidden />
            <div class="p-3">
                @* <div asp-validation-summary="All"></div>  *@
                <!-- General Info Section -->
                <h5 class="mb-3">Item Info</h5>
                <hr>
                <div class="form-floating py-1 col-12">
                    <partial name="_ItemDetail" model="@Model.Item" />
                </div>
                <hr>
                <!-- Detail Section -->
                <h5 class="mb-3">Buyer</h5>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Buyer.Name" disabled class="form-control border shadow" />
                    <label asp-for="Buyer.Name" class="ms-2"></label>
                    <span asp-validation-for="Buyer.Name" class="text-danger"></span>
                </div>
                <h5 class="mb-3">Seller</h5>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Item.Seller.Name" disabled class="form-control border shadow" />
                    <label asp-for="Item.Seller.Name" class="ms-2"></label>
                    <span asp-validation-for="Item.Seller.Name" class="text-danger"></span>
                </div>                
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <a asp-controller="Request" asp-action="FinalizeRequestItem" asp-route-itemId="@Model.ItemId" asp-route-buyId="@Model.BuyerId" class="btn btn-secondary w-100">
                            <i class="bi bg-info"></i> Request
                        </a>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
