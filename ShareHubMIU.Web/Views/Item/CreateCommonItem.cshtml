@model CommonItem

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Common Item</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="SellerId" hidden />
            <input asp-for="Type" hidden />
            <div class="p-3">

                <!-- General Info Section -->
                <h5 class="mb-3">General Info</h5>
                <hr>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Title" class="form-control border shadow" />
                    <label asp-for="Title" class="ms-2"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Description" class="form-control border shadow" />
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- SubCategory and Name -->
                <div class="form-floating py-1 col-12">
                    <input asp-for="SubCategory" class="form-control border shadow" />
                    <label asp-for="SubCategory" class="ms-2"></label>
                    <span asp-validation-for="SubCategory" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Name" class="form-control border shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Condition and Price -->
                <div class="form-floating py-1 col-12">
                    <input asp-for="Condition" class="form-control border shadow" />
                    <label asp-for="Condition" class="ms-2"></label>
                    <span asp-validation-for="Condition" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Price" class="form-control border shadow" />
                    <label asp-for="Price" class="ms-2"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <!-- Image Upload -->
                <div class="form-floating py-1 col-12">
                    <input asp-for="Image" class="form-control border shadow" type="file" />
                    <label asp-for="Image" class="ms-2"></label>
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <hr>

                <!-- Detail Section -->
                <h5 class="mb-3">Details</h5>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Condition" class="form-control border shadow" />
                    <label asp-for="Condition" class="ms-2"></label>
                    <span asp-validation-for="Condition" class="text-danger"></span>
                </div>

                <!-- Address Section -->
                <hr>
                <h5 class="mb-3">Address</h5>
                <div class="form-floating py-1 col-12">
                    <input asp-for="AddressLine1" class="form-control border shadow" />
                    <label asp-for="AddressLine1" class="ms-2"></label>
                    <span asp-validation-for="AddressLine1" class="text-danger"></span>
                </div>

                <div class="form-floating py-1 col-12">
                    <input asp-for="AddressLine2" class="form-control border shadow" />
                    <label asp-for="AddressLine2" class="ms-2"></label>
                    <span asp-validation-for="AddressLine2" class="text-danger"></span>
                </div>

                <div class="form-floating py-1 col-12">
                    <input asp-for="City" class="form-control border shadow" />
                    <label asp-for="City" class="ms-2"></label>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="form-floating py-1 col-12">
                    <input asp-for="State" class="form-control border shadow" />
                    <label asp-for="State" class="ms-2"></label>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>

                <div class="form-floating py-1 col-12">
                    <input asp-for="ZipCode" class="form-control border shadow" />
                    <label asp-for="ZipCode" class="ms-2"></label>
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Create
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Item" asp-action="CreateCommonItem" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
